<%- include('header.ejs') %>

<nav class="navbar bg-body-tertiary navbar-dark bg-secondary">
    <div class="container-fluid">
      <a class="navbar-brand">TODO List</a>
    </div>
  </nav>


  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div id="signin-form">
              <h4 class="card-title text-center">Sign In</h4>

              <form  action="/auth" method="post">
                <div class="form-group">
                  <label for="signin-email">Email address</label>
                  <input type="text" name="email" id="email" placeholder="Enter a id here" class="form-control" required/>
                </div>
                <div class="form-group">
                  <label for="signin-password">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
              </form>
              <p class="text-center mt-3">Don't have an account? <a href="/signUp" id="show-signup">Sign Up</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

