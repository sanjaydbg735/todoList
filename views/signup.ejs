<%- include('header.ejs') %>

<nav class="navbar bg-body-tertiary navbar-dark bg-secondary">
    <div class="container-fluid">
      <a class="navbar-brand">TODO List</a>
    </div>
  </nav>


  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div id="signin-form">
              <h4 class="card-title text-center">Sign Up</h4>

              <form  action="/signup" method="post">
                <div class="form-group">
                  <label for="signup-name">Name</label>
                  <input type="text" class="form-control" id="name" name = "name" placeholder="Enter name">
                </div>
                <div class="form-group">
                  <label for="signup-email">Email address</label>
                  <input type="email" class="form-control" id="email" name = "email" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="signup-password">Password</label>
                  <input type="password" class="form-control" id="password" name = "password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
              </form>
              <p class="text-center mt-3">Don't have an account? <a href="/login" id="show-signup">Sign In</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('footer.ejs') %>